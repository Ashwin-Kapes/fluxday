<div class="pane3-meta">
  <div class="title">
    Log
  </div>

  <div class="right">
    <%= link_to raw('<div class="edit_link"></div>'), edit_work_log_path(@work_log) %>
  </div>
</div>

<div class="pane3-content work-log-show">
  <div class="row">
    <div class="one-row">
      <div class="small-3 columns">Date</div>
      <div class="small-9 columns"><%= @work_log.date.strftime('%d %B %Y') %></div>
    </div>
    <div class="one-row">
      <div class="small-3 columns">User</div>
      <div class="small-9 columns"><%= link_to @work_log.user.name, user_path() %></div>
    </div>
    <div class="one-row">
      <div class="small-3 columns">Time taken</div>
      <div class="small-9 columns"><%= @work_log.hours %></div>
    </div>
    <div class="one-row">
      <div class="small-3 columns">Task</div>
      <div class="small-9 columns"><%= link_to @work_log.task.name, task_path(@work_log.task) %></div>
    </div>
    <div class="one-row">
      <div class="small-3 columns">Description</div>
      <div class="small-9 columns"><%= @work_log.description %></div>
    </div>
  </div>
</div>


<script type="text/javascript">
    $('.logs .card-transparent').removeClass('active')
    $('.log-<%= @work_log.id %>').addClass('active')
</script>