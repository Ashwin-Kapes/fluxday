<%= content_for :pane2 do %>
    <div class="pane2-meta">
      <div class="title">Entries</div>
      <dl class="tabs right" data-tab>
        <dd class="active clear-tab"><a href="#panel3-1">
          Week
        </a></dd>
        <dd class="clear-tab"><a href="#panel3-2">
          Month
        </a></dd>
      </dl>


    </div>
    <div class="pane2-content">

      <div class="data-container">

        <!--<dl class="tabs" data-tab>-->
        <!--<dd class="active"><a href="#panel2-1">-->
        <!--Week-->
        <!--</a></dd>-->
        <!--<dd><a href="#panel2-2">-->
        <!--Month-->
        <!--</a></dd>-->
        <!--</dl>-->
        <div class="tabs-content">
          <div class="content active" id="panel3-1">
            <div class="weekdays-container">
            <div class="weekdays">
              <% (@start_date..@end_date).each do |date| %>
                  <div class="date-card date-<%= date.to_s %> card-transparent transition">
                    <% unless date == Date.today %>
                        <%= link_to date.strftime('%A %d %B %Y'), calendar_day_path(:date => date.to_s), :remote => true, :class => 'cal-date' %>
                    <% else %>
                        <%= link_to 'Today', calendar_day_path(:date => date.to_s), :remote => true, :class => 'cal-date' %>
                    <% end %>
                    <% if date <= Date.today && date >= 5.days.ago %>
                        <%= link_to 'Add log', new_work_log_path(:date => date), :remote => true, :class => 'btn btn-sec right' %>
                    <% end %>
                    <div class="entries">
                      <ul>
                        <% @entry_hash[date].each do |e| %>
                            <li>
                              <%= link_to e.name, work_log_path(e), :remote => true %>
                            </li>
                        <% end %>
                      </ul>
                    </div>
                  </div>
              <% end %>
            </div>
            <div class="week-nav">
              <%= link_to calendar_week_path(:date => @start_date-1.days), :remote => true do %>
                  <div class="prev icon left"></div>
              <% end %>
              <%= link_to calendar_week_path(:date => @end_date+1.days), :remote => true do %>
                  <div class="next icon right"></div>
              <% end %>
            </div>
            </div>
          </div>
          <div class="content" id="panel3-2">
            <div class="calendar">
              <div class="month-calendar-field"></div>
            </div>
            <div class="work-logs">
              <%= render :partial => 'work_logs/logs' %>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>
<%= render :partial => 'calendar/day', :locals => {:date => @date, :entries => @entries} %>
