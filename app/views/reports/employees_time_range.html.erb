<div class="report-options">
  <form class="employee_daily_report_form" data-remote="true">
    <div class="report-type">
      <%= select_tag 'report[type]',options_for_select([['Project','project'],['Team','team'],['Managing users','managing_users'],['Self','user']],@report_type),:class=>'select_add report_type_select' %>
    </div>
    <div class="report_options">

    </div>
    <div class="report-date">
      <%= text_field_tag 'report[start_date]',@start_date,:class=>'date-only-input' %>
      <%= text_field_tag 'report[end_date]',@end_date,:class=>'date-only-input' %>
    </div>
    <button>Display</button>
  </form>
</div>
<div class="report-renderer">
<%= render :partial => 'reports/employee_time_range' %>
</div>
<script type="text/javascript">
  $('.report_type_select').on("change",function() {
      $.get('/reports/get_selection_list?type='+$('.report_type_select').val())
  });
</script>