<div class="main-title">
  <div class="element">
    <h5>Reports
      <a href="#" data-dropdown="drop1" class="report-select">OKR report</a>
      <ul id="drop1" class="f-dropdown report-select" data-dropdown-content>
        <li><%= link_to 'Grouped Employee daily report', reports_employees_daily_path %></li>
        <li><%= link_to 'Grouped Employee report for a time range', reports_employees_time_range_path %></li>
        <li><%= link_to 'Employee report for a day', reports_employee_day_path %></li>
        <li><%= link_to 'Employee report for a time range', reports_employee_range_path %></li>
        <li><%= link_to 'Task reports', reports_tasks_path %></li>
        <li><%= link_to 'OKR', reports_okrs_path %></li>
      </ul>
    </h5>
  </div>
</div>
<div class="report-options">
  <!--<form class="employee_daily_report_form" data-remote="false">-->
  <%= form_for(:report, :url => {:controller => 'reports', :action => 'okrs'},:method=>:get,:remote=>true, :class => 'employee_daily_report_form') do %>
      <div class="report-type">
        <%= select_tag('employee_id', options_for_select(@users.map { |x| [x.name, x.id] }, @user.id)) %>
      </div>
      <div class="submit_button  show-for-medium-up">
        <button>Go</button>
      </div>
      <div class="report-date">
        <%= text_field_tag 'start_date', @start_date, :class => 'date-only-input' %>
        <%= text_field_tag 'end_date', @end_date, :class => 'date-only-input' %>
      </div>
      <div class="submit_button show-for-small-only">
        <button>Go</button>
      </div>
      <!--</form>-->
  <% end %>
</div>
<div class="report-renderer">
  <%= render :partial => 'reports/okr_report' %>
</div>