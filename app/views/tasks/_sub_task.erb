<div class="subtask">
  Subtask
  <%= count %>:
  <%= link_to task.name,task_path(task) %>


  <div class="info">
    Start date
    <em><%= task.start_date.strftime('%d %B %Y') %></em>
    End date
    <em><%= task.end_date.strftime('%d %B %Y') %></em>
  </div>

  <div class="info">
    Assigned to
    <em>
      <% task.users.each_with_index do |u, i| %>
          <%= link_to u.name, user_path(u) %>
          <%= i+1 != task.users.count ? "," : '' %>
      <% end %>
    </em>
  </div>
</div>