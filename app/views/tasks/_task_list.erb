<div class="pane2-meta">
  <div class="title">My tasks</div>
</div>
<div class="pane2-content">
  <div class="task-list">
    <% @tasks.each do |task| %>
        <%= link_to task_path(task) do %>
            <div class="card transition task-card task task-<%= task.id %>">
              <div class="name">
                <%= task.name %>
              </div>
              <div class="date end-<%= (task.end_date <= 7.day.from_now && task.end_date >= Date.today) ? 'soon' : 'low' %>">
                <%= task.time_to_end %>
              </div>
              <div class="team">
                <%= task.team.name %>
              </div>
            </div>
        <% end %>
    <% end %>
  </div>
</div>