<div class="task-list">
  <% @tasks.each do |task| %>
      <%= link_to task_path(task),:remote=>true do %>
          <div class="card transition task-card">
            <div class="name">
              <%= task.name %>
            </div>
            <div class="date end-<%= (task.end_date <= 7.day.from_now && task.end_date >= Date.today) ? 'soon' : 'low' %>">
              <%= task.time_to_end %>
            </div>
            <div class="team">
              <%= task.team.name %>
            </div>
          </div>
      <% end %>
  <% end %>
</div>
